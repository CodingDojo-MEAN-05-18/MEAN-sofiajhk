<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="./style.css">
    <title>Login/Registration</title>
</head>
<body>
    <div id="wrapper">
        <% if (messages.registration){ %>
        <ul>
            <% for (var error in messages){ %>
            <li class="registration"><%= messages[error] %></li>
            <% } %>
        </ul>
        <% } %>

        <% if (messages.saveError){ %>
        <ul>
            <% for (var error in messages){ %>
            <li class="saveError"><%= messages[error] %></li>
            <% } %>
        </ul>
        <% } %>

        <div class="form">
            <h1>Register</h1>
            <form action='/register' method='post'>
                <label for="f_name">First Name:</label>
                <input type="text" name="f_name"><br>
                <label for="l_name">Last Name:</label>
                <input type="text" name="l_name"><br>
                <label for="email">Email:</label>
                <input type="text" name="email"><br>
                <label for="b_day">Birthday:</label>
                <input type="date" name="b_day"><br>
                <label for="password">Password:</label>
                <input type="password" name="password"><br>
                <label for="pw_conf">Confirm Password:</label>
                <input type="password" name="pw_conf"><br>
                <input type="submit" name="Register">
            </form>
        </div>
        
        <div class="form">
            <h1>Log In</h1>
            <form action='/login' method='post'>
                <label for="email">Email:</label>
                <input type="text" name="email"><br>
                <label for="password">Password:</label>
                <input type="password" name="password"><br>
                <input type="submit" name="" value="Log In">
            </form>
            
        </div>
    </div>
</body>
</html>